<% layout("layouts/boilerplate") %>



<h1 style="text-align: center;">Create a new Campground.</h1>

<div class="col-4 offset-4">
	<form action="/campgrounds" method="post">
		<div class="form-group mb-3">
			<label>CampGround Name</label>
			<input type="text" class="form-control" name="campground[name]" placeholder="Name">
		</div>
		<div class="form-group mb-3">
			<label>Image URL</label>
			<input type="text" class="form-control" name="campground[image]" placeholder="Image Url">
		</div>
		<div class="form-group mb-3">
			<label>Price</label>
			<div class="input-group mb-3">
				<span class="input-group-text" id="price-label">$</span>
				<input type="text" class="form-control" placeholder="0.00" aria-label="price" aria-describedby="price-label" name="campground[price]">
			</div> 
		</div>
		<div class="form-group mb-3">
			<label>Location</label>
			<input type="text" class="form-control" name="campground[location]" placeholder="Location">
		</div>
		<div class="form-group mb-3">
			<label>Description</label>
			<textarea class="form-control" name="campground[description]" placeholder="Description"></textarea>
		</div>
		<div class="mb-3">
			<button type="submit" class="btn btn-success btn-block">Submit</button>
		</div>
	</form>
	
	<a href="/campgrounds">Go Back</a>
</div>

