<% layout("layouts/boilerplate") %>

<h1 style="text-align: center;">Edit Campground.</h1>

<div class="col-4 offset-4">
	<form action="/campgrounds/<%= campground.id%>?_method=PUT" method="post">
		<div class="form-group mb-3">
			<label>CampGround Name</label>
			<input type="text" class="form-control" name="campground[name]" placeholder="Name" value="<%= campground.name%>">
		</div>
		<div class="form-group mb-3">
			<label>Image URL</label>
			<input type="text" class="form-control" name="campground[image]" placeholder="Image Url" value="<%= campground.image%>">
		</div>
		<div class="form-group mb-3">
			<label>Price</label>
			<div class="input-group mb-3">
				<span class="input-group-text" id="price-label">$</span>
				<input type="text" class="form-control" placeholder="0.00" aria-label="price" aria-describedby="price-label" name="campground[price]" value="<%= campground.price%>">
			</div> 
		</div>
		<div class="form-group mb-3">
			<label>Location</label>
			<input type="text" class="form-control" name="campground[location]" placeholder="Location" value="<%= campground.location%>">
		</div>
		<div class="form-group mb-3">
			<label>Description</label>
			<textarea class="form-control" name="campground[description]" placeholder="Description"><%= campground.description%></textarea>
		</div>
		<div class="mb-3">
			<button type="submit" class="btn btn-primary btn-block">Submit</button>
		</div>
	</form>
	
	<a href="/campgrounds">Go Back</a>
</div>



